@page
@model SampleVacancies.Pages.VacanciesModel
@{
    ViewData["Title"] = "Vacancies";
}


<div class="Vacancies">Vacancies</div>
<br />
<div class="To-get-a-feel-for-wh">
    To get a feel for what it’s like to work for us then please visit Who We Are or see what we’ve been up to within ITC News. Due to continued growth, we currently have the following vacancies:
</div>

<form method="post">
    <input type="hidden" asp-for="Vacancy.Id"/>
    <div class="form-group">
        <label asp-for="Vacancy.JobTitle" class="Field-Label">Job Title*:</label>
        <input asp-for="Vacancy.JobTitle" class="Regular-Field" />
        <br />
        <label asp-for="Vacancy.Location" class="Field-Label">Location*:</label>
        <input asp-for="Vacancy.Location" class="Regular-Field" />
        <br />
        <label asp-for="Vacancy.Department" class="Field-Label">Department:</label>
        <input asp-for="Vacancy.Department" class="Regular-Field" />
        <br />
        <label asp-for="Vacancy.Salary" class="Field-Label">Salary*:</label>
        <input asp-for="Vacancy.Salary" class="Regular-Field" />
        <br />
        <label asp-for="Vacancy.Description" class="Field-Label">Description*:</label>
        <input asp-for="Vacancy.Description" class="Description-Field" />
    </div>
    <button type="submit" class="btn btn-primary">Post this vacancy</button>
</form>



@foreach (var vacancy in Model.Vacancies)
{
    <div class="Rectangle-Vacancy">
        <div class="Job-Title">@vacancy.JobTitle</div>
        <div class="Job-Description">@vacancy.Description</div>
        <div class="Job-Location">@vacancy.Location</div>
        <div class="Salary">@vacancy.Salary</div>
    </div>
}


